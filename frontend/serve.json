{
  "rewrites": [
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/index.html", "destination": "/public/index.html" },
    { "source": "/manifest.json", "destination": "/public/manifest.json" },
    { "source": "/service-worker.js", "destination": "/public/service-worker.js" },
    { "source": "/icons/:path*", "destination": "/public/icons/:path*" }
  ],
  "headers": [
    {
      "source": "**/*.js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript" }
      ]
    },
    {
      "source": "**/*.css",
      "headers": [
        { "key": "Content-Type", "value": "text/css" }
      ]
    },
    {
      "source": "**/*.svg",
      "headers": [
        { "key": "Content-Type", "value": "image/svg+xml" }
      ]
    }
  ]
}
