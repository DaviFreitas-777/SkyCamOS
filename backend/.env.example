# SkyCamOS - Configuracoes de Ambiente
# Copie este arquivo para .env e configure os valores

# Aplicacao
APP_NAME=SkyCamOS
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Servidor
HOST=0.0.0.0
PORT=8000

# Seguranca
SECRET_KEY=sua-chave-secreta-aqui-mude-em-producao
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Banco de Dados
DATABASE_URL=sqlite+aiosqlite:///./skycamos.db

# Armazenamento
RECORDINGS_PATH=./recordings
MAX_STORAGE_GB=100
RETENTION_DAYS=30

# ONVIF Discovery
ONVIF_DISCOVERY_TIMEOUT=5
ONVIF_DEFAULT_USERNAME=admin
ONVIF_DEFAULT_PASSWORD=admin

# Streaming
RTSP_BUFFER_SIZE=10
HLS_SEGMENT_DURATION=2
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302

# Notificacoes (opcional)
PUSH_NOTIFICATION_ENABLED=false
FIREBASE_CREDENTIALS_PATH=

# Deteccao de Movimento
MOTION_THRESHOLD=25
MOTION_MIN_AREA=500
MOTION_COOLDOWN_SECONDS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/skycamos.log
