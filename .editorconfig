# ==============================================================================
# SkyCamOS - EditorConfig
# Configuracao padronizada para editores de codigo
# https://editorconfig.org
# ==============================================================================

# Indica que este e o arquivo raiz do projeto
root = true

# ------------------------------------------------------------------------------
# Configuracoes padrao para todos os arquivos
# ------------------------------------------------------------------------------
[*]
# Estilo de indentacao: space ou tab
indent_style = space
# Tamanho da indentacao
indent_size = 4
# Codificacao de caracteres
charset = utf-8
# Estilo de fim de linha: lf (Unix), crlf (Windows), cr (Mac OS classico)
end_of_line = lf
# Remove espacos em branco no final das linhas
trim_trailing_whitespace = true
# Insere linha em branco no final do arquivo
insert_final_newline = true
# Largura maxima da linha (dica para editores)
max_line_length = 100

# ------------------------------------------------------------------------------
# Python
# ------------------------------------------------------------------------------
[*.py]
indent_size = 4
max_line_length = 88

# ------------------------------------------------------------------------------
# JavaScript / TypeScript / Vue / React
# ------------------------------------------------------------------------------
[*.{js,jsx,ts,tsx,vue,mjs,cjs}]
indent_size = 2
max_line_length = 100

# ------------------------------------------------------------------------------
# Web (HTML, CSS, SCSS)
# ------------------------------------------------------------------------------
[*.{html,htm,css,scss,sass,less}]
indent_size = 2

# ------------------------------------------------------------------------------
# JSON, YAML, TOML
# ------------------------------------------------------------------------------
[*.{json,jsonc,json5}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 4

# ------------------------------------------------------------------------------
# Markdown
# ------------------------------------------------------------------------------
[*.{md,mdx}]
# Markdown usa espacos no final para quebras de linha
trim_trailing_whitespace = false
max_line_length = off

# ------------------------------------------------------------------------------
# Makefiles
# ------------------------------------------------------------------------------
[Makefile]
# Makefiles REQUEREM tabs para indentacao
indent_style = tab

[*.mk]
indent_style = tab

# ------------------------------------------------------------------------------
# Shell Scripts
# ------------------------------------------------------------------------------
[*.{sh,bash,zsh}]
indent_size = 2
# Shell scripts devem ter final de linha Unix
end_of_line = lf

# ------------------------------------------------------------------------------
# Docker
# ------------------------------------------------------------------------------
[Dockerfile*]
indent_size = 4

[docker-compose*.{yml,yaml}]
indent_size = 2

# ------------------------------------------------------------------------------
# Configuracoes do Projeto
# ------------------------------------------------------------------------------
[*.{conf,cfg,ini}]
indent_size = 4

[*.env*]
indent_size = 4

# ------------------------------------------------------------------------------
# Git
# ------------------------------------------------------------------------------
[.git*]
indent_size = 4

# ------------------------------------------------------------------------------
# XML
# ------------------------------------------------------------------------------
[*.xml]
indent_size = 2

# ------------------------------------------------------------------------------
# SQL
# ------------------------------------------------------------------------------
[*.sql]
indent_size = 2

# ------------------------------------------------------------------------------
# Nginx
# ------------------------------------------------------------------------------
[nginx.conf]
indent_size = 4

[*.nginx]
indent_size = 4
